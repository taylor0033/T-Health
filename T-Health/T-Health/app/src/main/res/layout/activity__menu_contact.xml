<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.sau.comsci.Activity_MenuContact">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_activity__menu_contact" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:weightSum="5">

        <ImageButton
            android:id="@+id/imgHome"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:background="#0C568D"
            android:src="@drawable/home001"
            android:tag="" />

        <ImageButton
            android:id="@+id/imgApp"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:background="#0C568D"
            android:src="@drawable/app001" />

        <ImageButton
            android:id="@+id/imgMap"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:background="#0C568D"
            android:src="@drawable/map001" />

        <ImageButton
            android:id="@+id/imgBrow"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:background="#0C568D"
            android:src="@drawable/browser001" />

        <ImageButton
            android:id="@+id/imgContact"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:background="#0C568D"
            android:src="@drawable/contact001"

            />


    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>


