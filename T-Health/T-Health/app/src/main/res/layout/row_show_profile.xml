<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.sau.comsci.ProfileListViewAdapter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="65dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="ชื่อ-สกุล :"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txtPname"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="XXXXXX"
            android:textAlignment="center" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="       อายุ :"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/txtPold"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="XX"
            android:textAlignment="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ปี" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:text="     น้ำหนัก :"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/txtPweight"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="XX"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Kg."
            android:id="@+id/textView2" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textView"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:text="      ส่วนสูง :"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/txtPheight"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="XXX"
            android:textAlignment="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Cm." />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp"
        android:gravity="center">
        <TextView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="                    เพศ :"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/textView3" />
        <TextView
            android:id="@+id/txtPsex"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="60dp"
            android:text="ชาย"
            android:textAlignment="center" />
    </LinearLayout>



</LinearLayout>